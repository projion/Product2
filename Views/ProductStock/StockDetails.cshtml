<script type="text/javascript">
function DeleteStudentRecord(StockId){
    let response= confirm("Do you want to delete this record")
    if(response)
    {
        $.ajax({
            type:"POST",
                url: '@Url.Action("DeleteStockDetails","ProductStock")',
            data: {StockId: StockId},

            success: function(response) {
                if (response.message == "Delete Successfully") {
                    window.location.reload();
                }
                else{
                    alert(response.message)
                }
            },
            complete: function() { },
            failure: function(jqXHR, textPrice, errorThrown) {
                alert("Error Occured! Please try again");
            }
        });
    }

}
    function UpdateStudentRecord(StockId, SupplierName, ProductName, Price, Quantity,UnitName, TotalAmount, Status, UpdateDate) {
        $('#StockId').val(StockId);
        $('#SupplierName').val(SupplierName);
        $('#ProductName').val(ProductName);
        $('#Price').val(Price);
        $('#Quantity').val(Quantity);
        $('#UnitName').val(UnitName);
        $('#TotalAmount').val(TotalAmount);
        $('#Status').val(Status);
        $('#UpdateDate').val(UpdateDate);
}
</script>